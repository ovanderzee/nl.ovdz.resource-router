{
	"short_name": "Resource Router",
	"name": "Frontend Resource Router",
	"version": "0.1.3",
	"description": "Route frontend sources in production to local files",
	"manifest_version": 2,
	"browser_action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "rsrc-route-16.png",
		"48": "rsrc-route-48.png",
		"128": "rsrc-route-128.png"
	},
	"background": {
		"scripts": [
			"extension-model.js",
			"link-element.js",
			"route-model.js",
			"url-model.js",
			"background.js"
		]
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"*://*/*"
	]
}
